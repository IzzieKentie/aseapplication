<!doctype html>
<html lang="en">
<head>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="style.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>
<script> 
    $(function(){
      $("#header").load("header.html"); 
    });
    </script> 
    <div id="header"></div>
  <div class="menu_and_event">
  <div class="flex-event-menu">
    <form method="" action="/CreateEvent">
      <div class="flex-event-menu-item">
        <input class="select-event" value="Create New Event" type="submit"/>
      </div>
    </form>
  <% if(data.length){ 
       for(var i = 0;i < data.length;i++) { %>
        <form method="POST" action="/selected_event">
            <input type = "hidden" name = "status" value = "<%=data[i].event_status%>" />
            <input type = "hidden" name = "selected" value = "<%=data[i].event_id%>" />
            <div class="flex-event-menu-item">
              <input class="select-event" type="submit" value="<%=data[i].event_name%>"/>
            </div>
        </form>
       <% }
     }else{ %>
        <div class="flex-event-menu">
          <div class="flex-event-menu-item">No Events to Display</div>
        </div>
  <% } %>
  </div>
  <div class="flex-event-selected"></div>
</div>
</body>
</html>

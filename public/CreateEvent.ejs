  <form method="POST" action="/CreateNewEvent">
  <div class="flex-container-event-column">
        <div class="flex-item-selected-event">
          <h3><b>Event Name</b></h3>
          <input type="text" name="name" id="name"></input>
        </div>
        <div class="flex-item-selected-event">
          <h3><b>Event Description</b></h3>
          <input type="text" name="description"></input>
        </div>
        <div class="flex-item-selected-event">
          <h3><b>Event Client</b></h3>
          <input type="text" name="client"></input>
        </div>
                <div class="flex-item-selected-event">
          <h3><b>Process Facilitator</b></h3>
          <select id="pf" name="pf" value="<%=pf[i].id%>">
            <% if(pf.length){ 
              for(var i = 0;i < pf.length;i++) { %>
              <option name="pf" value="<%=pf[i].id%>"><%=pf[i].forename%> <%=pf[i].surname%></option>
            <% }}%>
          </select>
        </div>
        <div class="flex-item-selected-event">
          <h3><b>Co Facilitator</b></h3>
          <select id="cf" name="cofac" value="<%=cf[i].id%>">
            <% if(cf.length){ 
              for(var i = 0;i < cf.length;i++) { %>
              <option name="cofac" value="<%=cf[i].id%>"><%=cf[i].forename%> <%=cf[i].surname%></option>
            <% }}%>
          </select>
        </div>
        <div class="flex-item-selected-event">
          <h3><b>Facilitator</b></h3>
          <select id="f" name="fac" value="<%=f[i].id%>">
            <% if(f.length){ 
              for(var i = 0;i < f.length;i++) { %>
              <option name="fac" value="<%=f[i].id%>"><%=f[i].forename%> <%=f[i].surname%></option>
            <% }}%>
          </select>        
        </div>
        <div class="flex-item-selected-event">
          <h3><b>Co-Designer's</b></h3>
            <% if(cd.length){ 
              for(var i = 0;i < cd.length;i++) { %>
              <input type="checkbox" name="CoDesigner" value="<%=cd[i].ID%>">
              <label for="<%=cd[i].forename%> <%=cd[i].surname%>"><%=cd[i].forename%> <%=cd[i].surname%></label><br>
            <% }}%>
        </div>
        <div class="flex-item-selected-event">
          <h3><b>Status</b></h3>
          <select id="event_status" name="event_status">
            <option value="Past">Past</option>
            <option value="Current">Current</option>
            <option value="Upcoming">Upcoming</option>
          </select>
        </div>
        <div class="flex-item-event" >
          <input type="submit" value="Create">
        </div>
  </div>
</form>

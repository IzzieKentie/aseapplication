<!doctype html>
<html lang="en">
<head>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="style.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
<script> 
    $(function(){
      $("#header").load("header.html", function() {
        document.getElementById("past").style = "border-bottom: 3px solid #0070AD;";
      }); 
    });
  </script>
    <div id="header"></div>
  <div class="menu_and_event">
  <div class="flex-event-menu">
  <% if(data.length){ 
       for(var i = 0;i < data.length;i++) { %>
        <form method="POST" action="/selected_event">
            <input type = "hidden" name = "selected" value = "<%=data[i].event_id%>" />
            <input type = "hidden" name = "status" value = "<%=data[i].event_status%>" />
            <div class="flex-event-menu-item">
              <input class="select-event" type="submit" value="<%=data[i].event_name%>"/>
            </div>
        </form>
       <% }
     }else{ %>
               <div class="flex-event-menu">
            <div class="flex-event-menu-item">No Events to Display</div>
          </div>
  <% } %>
            </div>
    <div class="flex-event-selected">
  </div>
</div>
<script>
function myFunction() {
  var x = document.getElementById("myTopnav");
  if (x.className === "topnav") {
    x.className += " responsive";
  } else {
    x.className = "topnav";
  }
}
</script>
</body>
</html>
